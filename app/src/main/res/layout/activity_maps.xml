


<RelativeLayout

xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:map="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/info"
android:name="info"
tools:context="com.example.pissardo.non.MapsActivity"
android:layout_width="match_parent"
android:layout_height="match_parent">
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        tools:context="com.example.pissardo.non.MapsActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </fragment>

    <TextView
        android:text="Modificado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/modified"
        android:layout_alignLeft="@+id/velocity"
        android:layout_alignStart="@+id/velocity"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:background="#602f4e"
        android:textSize="16dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="43dp"
        android:background="@drawable/textfieldshape"
        android:padding="2dp"
        android:id="@+id/velocity"
        tools:text="Velocidade"
        android:fontFamily="sans-serif"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="16dp"/>

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton"
        android:layout_alignBaseline="@+id/velocity"
        android:layout_alignBottom="@+id/velocity"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp" />

</RelativeLayout>